/* components/showToast/showToast.wxss */
/* components/model/model.wxss */
@import '../../base/base.wxss';
.toast-content-wrap {
    display: flex;
    position: fixed;
    height: 100%;
    width: 100%;
    justify-content: center;
    align-items: center;
    z-index: 999;
    top: 0;
}
 
.toast-content {
    height: 296rpx;
    width: 360rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    color: #d2d2d2;
    background: rgba(0, 0, 0, 0.60);
    border-radius: 8px;
    margin-top: -120px;
}
 
.toast-content .iconfont {
    margin-bottom: 10rpx;
    font-size: 120rpx;
    vertical-align: top;
    margin-top: -20rpx;
}
 
.toast-content .content-text {
    font-size: 16px;
    text-align: center;
    vertical-align: top;
    margin-top: -30rpx;
    padding: 0 20rpx;
    color: #fff;
}
 
.toast-loading {
    width: 50 rpx;
    height: 50 rpx;
    margin-bottom: 30rpx;
}